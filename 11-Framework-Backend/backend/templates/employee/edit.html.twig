{% extends 'base.html.twig' %}

{% block title %}Modifier L'Employé{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
      body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #f4f7f9;
        color: #344055;
        margin: 0;
        padding: 2rem;
      }

      h1 {
        font-weight: 700;
        font-size: 2.5rem;
        margin-bottom: 2rem;
        color: #222f3e;
      }

      .form-container {
        background: white;
        border-radius: 12px;
        box-shadow: 0 12px 24px rgba(0,0,0,0.08);
        padding: 2rem;
        max-width: 600px;
        margin-bottom: 2rem;
      }

      form {
        margin-bottom: 1.5rem;
      }

      .btn {
        display: inline-block;
        padding: 0.5rem 1.5rem;
        border-radius: 25px;
        background: #10ac84;
        color: white;
        font-weight: 600;
        text-decoration: none;
        box-shadow: 0 8px 15px rgba(16,172,132,0.3);
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
        border: none;
        cursor: pointer;
        font-size: 1rem;
      }
      .btn:hover {
        background: #0e9e74;
        box-shadow: 0 12px 25px rgba(14,158,116,0.5);
      }

      .btn-delete {
        background: #e74c3c;
        box-shadow: 0 8px 15px rgba(231,76,60,0.3);
        margin-left: 1rem;
      }
      .btn-delete:hover {
        background: #c0392b;
        box-shadow: 0 12px 25px rgba(192,57,43,0.5);
      }

      .actions {
        margin-top: 1.5rem;
      }

      a.btn-link {
        font-weight: 600;
        color: #10ac84;
        text-decoration: none;
        margin-right: 1rem;
        transition: color 0.3s ease;
      }
      a.btn-link:hover {
        color: #0e9e74;
      }

      @media (max-width: 600px) {
        body {
          padding: 1rem;
        }
        h1 {
          font-size: 2rem;
        }
        .form-container {
          padding: 1rem;
        }
      }
    </style>
{% endblock %}

{% block body %}
    <h1>Modifier L'Employé</h1>

    <div class="form-container">
        {{ include('employee/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

        <div class="actions">
            <a href="{{ path('app_employee_index') }}" class="btn-link">Retour À La Liste</a>
            {{ include('employee/_delete_form.html.twig', {'attr': {'class': 'btn btn-delete'}}) }}
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Restaurant{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
      /* Reset simple */
      * {
        box-sizing: border-box;
      }
      body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #f4f7f9;
        color: #344055;
        margin: 0;
        padding: 2rem;
      }

      h1 {
        font-weight: 700;
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
        color: #222f3e;
      }

      .details-container {
        background: white;
        border-radius: 12px;
        box-shadow: 0 12px 24px rgba(0,0,0,0.08);
        padding: 2rem;
        max-width: 600px;
        margin-bottom: 2rem;
      }

      table {
        width: 100%;
        border-collapse: collapse;
      }

      tbody tr {
        border-bottom: 1px solid #eaeaea;
      }

      tbody th, tbody td {
        padding: 1rem 1.25rem;
        text-align: left;
      }

      tbody th {
        width: 35%;
        font-weight: 600;
        color: #10ac84;
        background: #f1f9f7;
        border-radius: 8px 0 0 8px;
      }

      tbody td {
        background: #fafafa;
        border-radius: 0 8px 8px 0;
      }

      .btn {
        display: inline-block;
        padding: 0.45rem 1.25rem;
        border-radius: 25px;
        background: #10ac84;
        color: white;
        font-weight: 600;
        text-decoration: none;
        box-shadow: 0 8px 15px rgba(16,172,132,0.3);
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
        margin-right: 1rem;
      }
      .btn:hover {
        background: #0e9e74;
        box-shadow: 0 12px 25px rgba(14,158,116,0.5);
      }

      .btn-delete {
        background: #e74c3c;
        box-shadow: 0 8px 15px rgba(231,76,60,0.3);
        margin-top: 1rem; /* espace au dessus */
      }
      .btn-delete:hover {
        background: #c0392b;
        box-shadow: 0 12px 25px rgba(192,57,43,0.5);
      }

      .actions {
        margin-top: 1rem;
      }

      @media (max-width: 600px) {
        body {
          padding: 1rem;
        }
        h1 {
          font-size: 2rem;
        }
        .details-container {
          padding: 1rem;
        }
      }
    </style>
{% endblock %}

{% block body %}
    <h1>Détails Du Restaurant</h1>

    <div class="details-container">
      <table>
          <tbody>
              <tr>
                  <th>ID</th>
                  <td>{{ restaurant.id }}</td>
              </tr>
              <tr>
                  <th>Nom</th>
                  <td>{{ restaurant.name }}</td>
              </tr>
              <tr>
                  <th>Localisation</th>
                  <td>{{ restaurant.location }}</td>
              </tr>
              <tr>
                  <th>Créé Le</th>
                  <td>{{ restaurant.createdAt ? restaurant.createdAt|date('Y-m-d H:i:s') : '' }}</td>
              </tr>
              <tr>
                  <th>Modifié Le</th>
                  <td>{{ restaurant.updatedAt ? restaurant.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
              </tr>
          </tbody>
      </table>

      <div class="actions">
          <a href="{{ path('app_restaurant_index') }}" class="btn">Retour À La Liste</a>
          <a href="{{ path('app_restaurant_edit', {'id': restaurant.id}) }}" class="btn">Modifier</a>
          {{ include('restaurant/_delete_form.html.twig', {'class': 'btn btn-delete'}) }}
      </div>
    </div>
{% endblock %}
